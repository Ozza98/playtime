{% extends "includes/layout.twig" %}

{% block title %}
    Settings - playtime
{% endblock %}

{% block content %}
    <h1>Settings</h1>

    <hr>
    <h2>General</h2>

    {% if done %}
        <p class="alert alert-success">
            Settings saved
        </p>
    {% endif %}

    <form action="/settings" method="post" enctype="application/x-www-form-urlencoded">
        <div class="mb-3">
            <label for="language">Emulator language</label>
            <select id="language" name="language" class="form-select">
                {% for language in languages %}
                    <option id="{{ language }}"
                            {% if settings.Language == language %}selected{% endif %}
                            >{{ language }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>

    <hr>
    <h2>By platform</h2>

    <ul class="list-group mb-3">
        {% for platform in platforms %}
            <li class="list-group-item">
                <a href="/settings/{{ platform.Type }}">{{ platform.Platform.Name }}</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}
