{% extends "includes/layout.twig" %}

{% block title %}
    Settings - playtime
{% endblock %}

{% block content %}
    <h1>Settings</h1>
    <hr>

    <h2>General</h2>

    {% if done %}
        <p class="alert alert-success">Settings saved</p>
    {% endif %}

    <form action="/settings" method="post" enctype="application/x-www-form-urlencoded">
        {% include "includes/form_settings.twig" %}
        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>

    <hr>
    <h2>Settings by platform</h2>

    <div class="list-group list-group-hover mb-3">
        {% for platform in platforms %}
            {% if platform.Id %}
                <a class="list-group-item list-group-item-action" href="/settings/{{ platform.Id }}">{{ platform.Name }}</a>
            {% endif %}
        {% endfor %}
    </div>

{% endblock %}
