{% extends "layouts/layout.twig" %}

{% block title %}
    Settings for {{ platform.Name }} - playtime
{% endblock %}

{% block assets %}
    <script src="/assets/platform-settings-controls.js"></script>
    <script src="/assets/platform-settings-core.js"></script>
{% endblock %}

{% block content %}
    <h1>Settings</h1>
    <h2>{{ platform.Name }}</h2>
    <hr>

    <form action="/settings/{{ platform.Id }}" method="post" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="_playtime_csrf" value="{{ _csrf_token }}">
        {% include "includes/form_platform_settings.twig" %}
        <hr>
        <div class="mb-3 text-end">
            <a href="/settings/{{ platform.Id }}/restore" class="btn btn-outline-secondary">Restore defaults</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>

{% endblock %}
