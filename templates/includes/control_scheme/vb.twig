<div class="row">
    <div class="col-6 text-center">
        <img src="/assets/img/controller/vb.png" alt="Virtual Boy Controller" class="img-fluid ps-3 pe-3">
    </div>
    <div class="col-6">
        {% include "control.twig" with btn_id="a"                   btn_title="A"                   btn_value=controls.A %}
        {% include "control.twig" with btn_id="b"                   btn_title="B"                   btn_value=controls.B %}
        {% include "control.twig" with btn_id="l"                   btn_title="L"                   btn_value=controls.L %}
        {% include "control.twig" with btn_id="r"                   btn_title="R"                   btn_value=controls.R %}
        {% include "control.twig" with btn_id="select"              btn_title="Select"              btn_value=controls.Select %}
        {% include "control.twig" with btn_id="start"               btn_title="Start"               btn_value=controls.Start %}
        {% include "control.twig" with btn_id="up"                  btn_title="Left D-Pad Up"       btn_value=controls.Up %}
        {% include "control.twig" with btn_id="down"                btn_title="Left D-Pad Down"     btn_value=controls.Down %}
        {% include "control.twig" with btn_id="left"                btn_title="Left D-Pad Left"     btn_value=controls.Left %}
        {% include "control.twig" with btn_id="right"               btn_title="Left D-Pad Right"    btn_value=controls.Right %}
        {% include "control.twig" with btn_id="l-stick-up"          btn_title="Right D-Pad Up"      btn_value=controls.LStickUp %}
        {% include "control.twig" with btn_id="l-stick-down"        btn_title="Right D-Pad Down"    btn_value=controls.LStickDown %}
        {% include "control.twig" with btn_id="l-stick-left"        btn_title="Right D-Pad Left"    btn_value=controls.LStickLeft %}
        {% include "control.twig" with btn_id="l-stick-right"       btn_title="Right D-Pad Right"   btn_value=controls.LStickRight %}
        {% include "control.twig" with btn_id="quick-save-state"    btn_title="Quick Save State"    btn_value=controls.QuickSaveState %}
        {% include "control.twig" with btn_id="quick-load-state"    btn_title="Quick Load State"    btn_value=controls.QuickLoadState %}
        {% include "control.twig" with btn_id="change-state-slot"   btn_title="Change State Slot"   btn_value=controls.ChangeStateSlot %}
    </div>
</div>
