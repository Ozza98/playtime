{% extends "../controls_tab.twig" %}

{% block controls_definitions %}
    {% set platform_id = platform_id %}
    {% set player = player %}
    {% set controller_img = "coleco.png" %}
    {% set controller_img_alt = "ColecoVision gamepad" %}
{% endblock %}

{% block controls_keyboard %}
    {% include control_template with input="keyboard" btn_id="a"                   btn_title="Left Button"        btn_value=controls.Keyboard.A %}
    {% include control_template with input="keyboard" btn_id="b"                   btn_title="Right Button"       btn_value=controls.Keyboard.B %}
    {% include control_template with input="keyboard" btn_id="up"                  btn_title="Up"                 btn_value=controls.Keyboard.Up %}
    {% include control_template with input="keyboard" btn_id="down"                btn_title="Down"               btn_value=controls.Keyboard.Down %}
    {% include control_template with input="keyboard" btn_id="left"                btn_title="Left"               btn_value=controls.Keyboard.Left %}
    {% include control_template with input="keyboard" btn_id="right"               btn_title="Right"              btn_value=controls.Keyboard.Right %}
    {% include control_template with input="keyboard" btn_id="x"                   btn_title="1"                  btn_value=controls.Keyboard.X %}
    {% include control_template with input="keyboard" btn_id="y"                   btn_title="2"                  btn_value=controls.Keyboard.Y %}
    {% include control_template with input="keyboard" btn_id="r"                   btn_title="3"                  btn_value=controls.Keyboard.R %}
    {% include control_template with input="keyboard" btn_id="l"                   btn_title="4"                  btn_value=controls.Keyboard.L %}
    {% include control_template with input="keyboard" btn_id="r2"                  btn_title="5"                  btn_value=controls.Keyboard.R2 %}
    {% include control_template with input="keyboard" btn_id="l2"                  btn_title="6"                  btn_value=controls.Keyboard.L2 %}
    {% include control_template with input="keyboard" btn_id="r3"                  btn_title="7"                  btn_value=controls.Keyboard.R3 %}
    {% include control_template with input="keyboard" btn_id="l3"                  btn_title="8"                  btn_value=controls.Keyboard.L3 %}
    {% include control_template with input="keyboard" btn_id="select"              btn_title="*"                  btn_value=controls.Keyboard.Select %}
    {% include control_template with input="keyboard" btn_id="start"               btn_title="#"                  btn_value=controls.Keyboard.Start %}
    {% include "common_keyboard_controls.twig" %}
{% endblock %}

{% block controls_gamepad %}
    {% include control_template with input="gamepad" btn_id="a"                   btn_title="A"                  btn_value=controls.Gamepad.A %}
    {% include control_template with input="gamepad" btn_id="b"                   btn_title="B"                  btn_value=controls.Gamepad.B %}
    {% include control_template with input="gamepad" btn_id="up"                  btn_title="Up"                 btn_value=controls.Gamepad.Up %}
    {% include control_template with input="gamepad" btn_id="down"                btn_title="Down"               btn_value=controls.Gamepad.Down %}
    {% include control_template with input="gamepad" btn_id="left"                btn_title="Left"               btn_value=controls.Gamepad.Left %}
    {% include control_template with input="gamepad" btn_id="right"               btn_title="Right"              btn_value=controls.Gamepad.Right %}
    {% include control_template with input="gamepad" btn_id="x"                   btn_title="1"                  btn_value=controls.Gamepad.X %}
    {% include control_template with input="gamepad" btn_id="y"                   btn_title="2"                  btn_value=controls.Gamepad.Y %}
    {% include control_template with input="gamepad" btn_id="r"                   btn_title="3"                  btn_value=controls.Gamepad.R %}
    {% include control_template with input="gamepad" btn_id="l"                   btn_title="4"                  btn_value=controls.Gamepad.L %}
    {% include control_template with input="gamepad" btn_id="r2"                  btn_title="5"                  btn_value=controls.Gamepad.R2 %}
    {% include control_template with input="gamepad" btn_id="l2"                  btn_title="6"                  btn_value=controls.Gamepad.L2 %}
    {% include control_template with input="gamepad" btn_id="r3"                  btn_title="7"                  btn_value=controls.Gamepad.R3 %}
    {% include control_template with input="gamepad" btn_id="l3"                  btn_title="8"                  btn_value=controls.Gamepad.L3 %}
    {% include control_template with input="gamepad" btn_id="select"              btn_title="*"                  btn_value=controls.Gamepad.Select %}
    {% include control_template with input="gamepad" btn_id="start"               btn_title="#"                  btn_value=controls.Gamepad.Start %}
    {% include "common_gamepad_controls.twig" %}
{% endblock %}
