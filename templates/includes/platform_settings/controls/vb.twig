    {% include control_template with input="gamepad" btn_id="quick-save-state"    btn_title="Quick Save State"    btn_value=controls.Gamepad.QuickSaveState %}
    {% include control_template with input="gamepad" btn_id="quick-load-state"    btn_title="Quick Load State"    btn_value=controls.Gamepad.QuickLoadState %}
