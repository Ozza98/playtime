{% extends "../controls_tab.twig" %}

{% block controls_definitions %}
    {% set platform_id = platform_id %}
    {% set player = player %}
    {% set controller_img = "vb.png" %}
    {% set controller_img_alt = "Virtual Boy Controller" %}
{% endblock %}

{% block controls_keyboard %}
    {% include control_template with input="keyboard" btn_id="a"                   btn_title="A"                   btn_value=controls.Keyboard.A %}
    {% include control_template with input="keyboard" btn_id="b"                   btn_title="B"                   btn_value=controls.Keyboard.B %}
    {% include control_template with input="keyboard" btn_id="l"                   btn_title="L"                   btn_value=controls.Keyboard.L %}
    {% include control_template with input="keyboard" btn_id="r"                   btn_title="R"                   btn_value=controls.Keyboard.R %}
    {% include control_template with input="keyboard" btn_id="select"              btn_title="Select"              btn_value=controls.Keyboard.Select %}
    {% include control_template with input="keyboard" btn_id="start"               btn_title="Start"               btn_value=controls.Keyboard.Start %}
    {% include control_template with input="keyboard" btn_id="up"                  btn_title="Left D-Pad Up"       btn_value=controls.Keyboard.Up %}
    {% include control_template with input="keyboard" btn_id="down"                btn_title="Left D-Pad Down"     btn_value=controls.Keyboard.Down %}
    {% include control_template with input="keyboard" btn_id="left"                btn_title="Left D-Pad Left"     btn_value=controls.Keyboard.Left %}
    {% include control_template with input="keyboard" btn_id="right"               btn_title="Left D-Pad Right"    btn_value=controls.Keyboard.Right %}
    {% include control_template with input="keyboard" btn_id="l-stick-up"          btn_title="Right D-Pad Up"      btn_value=controls.Keyboard.LStickUp %}
    {% include control_template with input="keyboard" btn_id="l-stick-down"        btn_title="Right D-Pad Down"    btn_value=controls.Keyboard.LStickDown %}
    {% include control_template with input="keyboard" btn_id="l-stick-left"        btn_title="Right D-Pad Left"    btn_value=controls.Keyboard.LStickLeft %}
    {% include control_template with input="keyboard" btn_id="l-stick-right"       btn_title="Right D-Pad Right"   btn_value=controls.Keyboard.LStickRight %}
    {% include control_template with input="keyboard" btn_id="quick-save-state"    btn_title="Quick Save State"    btn_value=controls.Keyboard.QuickSaveState %}
    {% include control_template with input="keyboard" btn_id="quick-load-state"    btn_title="Quick Load State"    btn_value=controls.Keyboard.QuickLoadState %}
    {% include control_template with input="keyboard" btn_id="change-state-slot"   btn_title="Change State Slot"   btn_value=controls.Keyboard.ChangeStateSlot %}
{% endblock %}

