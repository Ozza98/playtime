<div class="form-floating mb-3">
    <select id="language" name="language" class="form-select">
        {% for language in languages %}
            <option id="{{ language }}" {% if settings.Language == language %}selected{% endif %}>{{ language }}</option>
        {% endfor %}
    </select>
    <label for="language">{{ loc("settings.general.language.label") }}</label>
</div>

<h5>{{ loc("settings.default-game.header") }}</h5>
{% include "form_game_settings.twig" with game=settings.DefaultGameSettings %}
