<div class="row">
    <div class="col-md-4 col-sm-12">
        {% if game.CoverImage %}
            <div class="text-center">
                <img src="{{ game.CoverImage }}" alt="Cover image" class="img-fluid d-block mb-2">
            </div>
            <div class="form-check mb-3">
                <input type="checkbox" id="cover-image-delete" name="cover-image-delete" value="1" class="form-check-input">
                <label for="cover-image-delete" class="form-check-label">Delete cover image</label>
            </div>
        {% else %}
            {% include "empty_state.twig" with icon="bi bi-card-image" text="No cover image" %}
        {% endif %}
    </div>
    <div class="col-md-8 col-sm-12">
        <div class="form-floating mb-3">
            <input type="text" id="original-name" class="form-control" disabled value="{{ game.OriginalFileName }}">
            <label for="original-name">Original file name</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" id="original-size" class="form-control" disabled value="{{ game.OriginalFileSize }}">
            <label for="original-size">Original file size (bytes)</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" id="name" name="name" class="form-control" value="{{game.Name}}" placeholder="Game name" required>
            <label for="name">Name</label>
        </div>
        <div class="form-floating mb-3">
            <select id="platform" name="platform" class="form-select">
                <option value="">Undefined</option>
                {% for platform in platforms %}
                    {% if platform.Id %}
                        <option value="{{ platform.Id }}" {% if platform.Id == game.Platform %}selected{% endif %}>{{ platform.Name }}</option>
                    {% endif %}
                {% endfor %}
            </select>
            <label for="platform">Platform</label>
        </div>
        <div class="form-floating mb-3">
            <textarea id="description" name="description" class="form-control" style="height: 100px">{{ game.Description }}</textarea>
            <label for="description">Description</label>
        </div>
        <div class="mb-3">
            <label for="cover-image" class="form-label">Upload new cover image</label>
            <input type="file" id="cover-image" name="cover-image" class="form-control">
        </div>
    </div>
</div>

<div class="mb-3">
    <div class="form-check form-switch">
        <input type="checkbox" id="override-settings" name="override-settings" value="1" class="form-check-input" {% if game.OverrideEmulatorSettings %}checked{% endif %}>
        <label for="override-settings" class="form-check-label">Override emulation settings</label>
    </div>
</div>

<div class="mb-3">
    <div class="form-check form-switch">
        <input type="checkbox" id="cue-enabled" name="cue-enabled" class="form-check-input" value="1" {% if game.CueEnabled %}checked{% endif %}>
        <label for="cue-enabled">Enable creation of .cue file</label>
    </div>
</div>

{% if netplay_enabled %}
    <div class="mb-3">
        <div class="form-check form-switch">
            <input type="checkbox" id="netplay-enabled" name="netplay-enabled" value="1" class="form-check-input" {% if game.NetplayEnabled %}checked{% endif %}>
            <label for="netplay-enabled" class="form-check-label">Netplay enabled</label>
        </div>
    </div>
{% endif %}

<div class="mb-3">
    <div class="form-check form-switch">
        <input type="checkbox" id="auto-save-enabled" name="auto-save-enabled" value="1" class="form-check-input" {% if game.AutoSaveEnabled %}checked{% endif %}>
        <label for="auto-save-enabled" class="form-check-label">Auto save enabled</label>
    </div>
</div>
<div id="auto-save-options" class="row mb-3 d-none">
    <div class="col-6">
        <div class="form-floating">
            <input type="number" id="auto-save-interval" name="auto-save-interval" class="form-control" value="{{ game.AutoSaveInterval / 60 }}" min="1" step="1" placeholder="5">
            <label for="auto-save-interval">Auto save interval (minutes)</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating">
            <input type="number" id="auto-save-capacity" name="auto-save-capacity" class="form-control" value="{{ game.AutoSaveCapacity }}" min="1" step="1" placeholder="10">
            <label for="auto-save-capacity">Auto save capacity</label>
        </div>
    </div>
</div>

<div class="form-floating mb-3">
    <select class="form-select" id="tags" name="tags[]" multiple
            data-allow-new="true"
            data-allow-clear="true"
            data-badge-style="secondary">
        <option disabled hidden value="">Choose a tag...</option>
        {% for tag in tags %}
            <option value="{{ tag }}" {% if tag in game.Tags %}selected{% endif %}>{{ tag }}</option>
        {% endfor %}
    </select>
    <label for="tags" class="form-label">Tags</label>
</div>
<script type="module">
    import Tags from "/assets/node_modules/bootstrap5-tags/tags.min.js"
    Tags.init('#tags');
</script>

<hr>

<div class="mb-3 text-end">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
