<div class="row">
    <div class="col-8 text-center">
        <img src="/assets/img/controller/segaMS.png" alt="Sega Master System Controller" class="img-fluid ps-3 pe-3">
    </div>
    <div class="col-4">
        <div class="row mb-1">
            <label for="control-{{ input }}-{{ player }}-b" class="col-sm-6 col-form-label">BUTTON 1 / START</label>
            <div class="col-sm-6">
                <input type="text" id="control-{{ input }}-{{ player }}-b" name="control-{{ input }}-{{ player }}-b" class="form-control" value="{{ controls.B }}">
            </div>
        </div>
        <div class="row mb-1">
            <label for="control-{{ input }}-{{ player }}-a" class="col-sm-6 col-form-label">BUTTON 2</label>
            <div class="col-sm-6">
                <input type="text" id="control-{{ input }}-{{ player }}-a" name="control-{{ input }}-{{ player }}-a" class="form-control" value="{{ controls.A }}">
            </div>
        </div>
        <div class="row mb-1">
            <label for="control-{{ input }}-{{ player }}-up" class="col-sm-6 col-form-label">Up</label>
            <div class="col-sm-6">
                <input type="text" id="control-{{ input }}-{{ player }}-up" name="control-{{ input }}-{{ player }}-up" class="form-control" value="{{ controls.Up }}">
            </div>
        </div>
        <div class="row mb-1">
            <label for="control-{{ input }}-{{ player }}-down" class="col-sm-6 col-form-label">Down</label>
            <div class="col-sm-6">
                <input type="text" id="control-{{ input }}-{{ player }}-down" name="control-{{ input }}-{{ player }}-down" class="form-control" value="{{ controls.Down }}">
            </div>
        </div>
        <div class="row mb-1">
            <label for="control-{{ input }}-{{ player }}-left" class="col-sm-6 col-form-label">Left</label>
            <div class="col-sm-6">
                <input type="text" id="control-{{ input }}-{{ player }}-left" name="control-{{ input }}-{{ player }}-left" class="form-control" value="{{ controls.Left }}">
            </div>
        </div>
        <div class="row mb-1">
            <label for="control-{{ input }}-{{ player }}-right" class="col-sm-6 col-form-label">Right</label>
            <div class="col-sm-6">
                <input type="text" id="control-{{ input }}-{{ player }}-right" name="control-{{ input }}-{{ player }}-right" class="form-control" value="{{ controls.Right }}">
            </div>
        </div>
        <div class="row mb-1">
            <label for="control-{{ input }}-{{ player }}-quick-save-state" class="col-sm-6 col-form-label">Quick Save State</label>
            <div class="col-sm-6">
                <input type="text" id="control-{{ input }}-{{ player }}-quick-save-state" name="control-{{ input }}-{{ player }}-quick-save-state" class="form-control" value="{{ controls.QuickSaveState }}">
            </div>
        </div>
        <div class="row mb-1">
            <label for="control-{{ input }}-{{ player }}-quick-load-state" class="col-sm-6 col-form-label">Quick Load State</label>
            <div class="col-sm-6">
                <input type="text" id="control-{{ input }}-{{ player }}-quick-load-state" name="control-{{ input }}-{{ player }}-quick-load-state" class="form-control" value="{{ controls.QuickLoadState }}">
            </div>
        </div>
        <div class="row mb-1">
            <label for="control-{{ input }}-{{ player }}-change-state-slot" class="col-sm-6 col-form-label">Change State Slot</label>
            <div class="col-sm-6">
                <input type="text" id="control-{{ input }}-{{ player }}-change-state-slot" name="control-{{ input }}-{{ player }}-change-state-slot" class="form-control" value="{{ controls.ChangeStateSlot }}">
            </div>
        </div>
    </div>
</div>
