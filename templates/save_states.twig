{% extends "includes/layout.twig" %}

{% block title %}
    Save states - playtime
{% endblock %}

{% block content %}

    <h1>Save states</h1>
    <h2>{{ game.Name }}</h2>
    <hr>

    {% if states %}
        <div class="row">
            {% for state in states %}
                <div class="col-3 mb-3">
                    <div class="card">
                        <img class="card-img-top" src="{{ state.ScreenshotDownloadLink }}" alt="Screenshot">
                        <div class="card-body">
                            <p class="text-center">
                                {{ state.Created.Format("02.01.2006 15:04:05") }}
                            </p>
                            <div class="text-end">
                                <a href="/play/{{ game.Id }}?state={{ state.Id }}"
                                   class="btn btn-sm btn-outline-primary">
                                   <i class="bi bi-joystick"></i> Play
                                </a>
                                <a href="/games/save-states/{{ game.Id }}/delete/{{ state.Id }}"
                                   class="btn btn-sm btn-outline-danger"
                                   title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        {% include "includes/empty_state.twig" with icon="bi bi-save" text="No save states found" %}
    {% endif %}

{% endblock %}
